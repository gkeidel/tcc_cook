<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :Nome %></br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Ingredientes %></br>
    <%= f.text_area :stuff, cols: 40, rows: 10 %>
  </p>
  <p>
    <%= f.label :Tipo %></br>
    <%= f.text_field :kind %>
  </p>
  <p>
    <%= f.label :Calorias %></br>
    <%= f.number_field :calories %>
  </p>
  <p>
    <%= f.label :Modo_de_Preparo %></br>
    <%= f.text_area :prepare_mode, cols: 40, rows: 10 %>
  </p>
  <p>
    <%= f.label :Tempo_de_Preparo %></br>
    <%= f.time_select :duration %>
  </p>
  <p>
    <%= f.label :Porções %></br>
    <%= f.text_field :portion %>
  </p>
  <p>
    <%= f.label :Imagem %></br>
    <%= f.text_field :poster, placeholder: ".GIF, .JPEG ou .PNG" %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancelar", root_path, data: {confirm: "Confirmar saída?"} %>
  </p>
<% end %>